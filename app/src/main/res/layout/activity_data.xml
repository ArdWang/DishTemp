<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/mHeaderBar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_bar_height"
        android:orientation="horizontal"
        >
        <ImageView
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mLeftIv"
            android:src="@drawable/icon_back"
            android:paddingRight="@dimen/common_padding"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/mDataTab"
            style="@style/TabsStyle"
            app:tabIndicatorFullWidth="false"
            />
        <LinearLayout
            android:id="@+id/mRightLl"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/config"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/mDataVp"
        style="@style/MatchWrap"
        android:layout_below="@id/mHeaderBar"
        />
</RelativeLayout>